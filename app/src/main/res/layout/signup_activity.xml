<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

      <ImageView
          android:id="@+id/topBg"
          android:layout_width="match_parent"
          android:layout_height="190dp"
          android:background="@drawable/top_curve"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageView
          android:id="@+id/backBtn"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/back"
          android:backgroundTint="@color/white"
          android:clickable="true"
          app:layout_constraintLeft_toLeftOf="@id/topBg"
          app:layout_constraintTop_toTopOf="@id/topBg" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="140dp"
          android:alpha=".5"
          android:src="@drawable/bitcoin"
          app:layout_constraintBottom_toBottomOf="@id/topBg"
          app:layout_constraintLeft_toLeftOf="@id/topBg"
          app:layout_constraintRight_toRightOf="@id/topBg"
          app:layout_constraintTop_toTopOf="@id/topBg" />

      <TextView
          android:id="@+id/tv_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:text="@string/create_account"
          android:textColor="@color/lightblue"
          android:textSize="30sp"
          android:textStyle="bold"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/topBg" />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/nameContainer"

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="10dp"
          android:gravity="center"
          app:helperText="required"
          app:boxStrokeWidth="0dp"
          app:boxStrokeWidthFocused="0dp"
          app:helperTextTextColor="@android:color/holo_red_dark"
          app:hintEnabled="false"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background"
            android:hint="@string/Dimmy_text"
            android:inputType="textPersonName"
            android:lines="1"
            android:paddingStart="60sp"
            tools:ignore="RtlSymmetry" />


      </com.google.android.material.textfield.TextInputLayout>

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="15dp"
          android:layout_marginStart="15dp"
          android:src="@drawable/user"

          app:layout_constraintLeft_toLeftOf="@id/nameContainer"

          app:layout_constraintTop_toTopOf="@id/nameContainer"
          android:contentDescription="@string/already_have_an_account" />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/emailContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="10dp"
          android:gravity="center"
          app:helperText="required"
          app:boxStrokeWidth="0dp"
          app:boxStrokeWidthFocused="0dp"
          app:helperTextTextColor="@android:color/holo_red_dark"
          app:hintEnabled="false"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/nameContainer">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background"
            android:hint="@string/jackjohn_gmail_com"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:paddingStart="60sp"
            tools:ignore="RtlSymmetry" />


      </com.google.android.material.textfield.TextInputLayout>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="15dp"
          android:layout_marginStart="15dp"
          android:src="@drawable/email"

          app:layout_constraintLeft_toLeftOf="@id/emailContainer"

          app:layout_constraintTop_toTopOf="@id/emailContainer"
          android:contentDescription="@string/already_have_an_account" />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/passwordContainer"
          android:layout_marginHorizontal="20dp"
          app:helperText="required"
          app:helperTextTextColor="@android:color/holo_red_dark"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          app:counterEnabled="true"
          app:hintEnabled="false"
          app:counterMaxLength="16"
          app:boxStrokeWidth="0dp"
          app:boxStrokeWidthFocused="0dp"
          app:passwordToggleEnabled="true"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/emailContainer"
          app:layout_constraintStart_toStartOf="parent"
          >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:paddingStart="60sp"
            android:background="@drawable/login_background"
            app:hintEnabled="false"
            android:maxLength="16"
            android:hint="@string/password"
            android:inputType="textPassword"

            tools:ignore="RtlSymmetry" />


      </com.google.android.material.textfield.TextInputLayout>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="15dp"
          android:layout_marginStart="15dp"
          android:src="@drawable/padlock"

          app:layout_constraintLeft_toLeftOf="@id/passwordContainer"

          app:layout_constraintTop_toTopOf="@id/passwordContainer"
          android:contentDescription="@string/already_have_an_account" />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/repetPasswordContainer"
          android:layout_marginHorizontal="20dp"
          app:helperText="required"
          app:helperTextTextColor="@android:color/holo_red_dark"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          app:boxStrokeWidth="0dp"
          app:boxStrokeWidthFocused="0dp"
          app:counterEnabled="true"
          app:hintEnabled="false"
          app:counterMaxLength="16"
          app:passwordToggleEnabled="true"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/passwordContainer"
          app:layout_constraintStart_toStartOf="parent"
          >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/repetPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:paddingStart="60sp"
            android:background="@drawable/login_background"
            app:hintEnabled="false"
            android:maxLength="16"
            android:hint="@string/reapet_password"
            android:inputType="textPassword"

            tools:ignore="RtlSymmetry" />


      </com.google.android.material.textfield.TextInputLayout>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="15dp"
          android:layout_marginStart="15dp"
          android:src="@drawable/padlock"

          app:layout_constraintLeft_toLeftOf="@id/repetPasswordContainer"

          app:layout_constraintTop_toTopOf="@id/repetPasswordContainer"
          android:contentDescription="@string/already_have_an_account" />
      <CheckBox
          android:id="@+id/checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="-3dp"

          android:text="@string/i_agree_the_terms_and_conditions"
          android:textColor="@color/lightblue"
          app:layout_constraintLeft_toLeftOf="@id/repetPasswordContainer"
          app:layout_constraintTop_toBottomOf="@id/repetPasswordContainer" />
      <View
          android:layout_width="0dp"
          android:layout_height="30dp"
          android:visibility="invisible"
          app:layout_constraintTop_toBottomOf="@id/checkbox"
          app:layout_constraintBottom_toTopOf="@id/constraintLayout"
          tools:ignore="MissingConstraints">
      </View>
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/constraintLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/checkbox">

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ash"
            android:text="@string/sign_up"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:enabled="false"
            app:layout_constraintBottom_toTopOf="@id/haveAccount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/haveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/already_have_an_account"

            app:layout_constraintBottom_toTopOf="@id/sign_In_Btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/sign_In_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_from_here"
            android:textColor="@color/lightblue"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>




